#!/bin/sh

echo "-----> Compiling C++ application"

BUILD_DIR=$1
echo $BUILD_DIR
pwd

# Download and install dependencies, e.g., Boost
# Clone any required repositories
# Compile your C++ code

# Install Boost
wget https://boostorg.jfrog.io/artifactory/main/release/1.78.0/source/boost_1_78_0.tar.gz
tar xvf boost_1_78_0.tar.gz
export BOOST_ROOT=/app/.heroku/boost_1_78_0

# Clone the metall repository
git clone https://github.com/LLNL/metall
export METALL_INCLUDE=/app/.heroku/metall/include



# Clean up or any other necessary steps

echo "-----> Done compiling"
